@page
@model Group19Project.Pages.UserPages.ViewProductsModel
@{
}

<h1>| View Available Products |</h1>
<br />


<div>
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Product Price</th>
                <th>Product Category</th>
                <th>Product Description</th>
                <th>Actions</th>
            </tr>
        </thead>

        @for (int i = 0; i < Model.Products.Count; i++)
        {
            <tr>
                <td>@Model.Products[i].ProductID</td>
                <td>@Model.Products[i].ProductName</td>
                <td>@Model.Products[i].ProductPrice</td>
                <td>@Model.Products[i].ProductCategory</td>
                <td>@Model.Products[i].ProductDescription</td>
                <td>
                    <a asp-page="/UserPages/AddProductToOrder" asp-route-id="@Model.Products[i].ProductID">Add to Order</a>

                </td>

            </tr>
        }


    </table>
</div>

<div>
    <a asp-page="/UserPages/UserIndex">Back to Customer Homepage</a>
</div>